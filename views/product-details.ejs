<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: `${product.name} | Kaka\'s Nails`}) %>
    <link rel="stylesheet" href="/styles/product-details.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <div>
        <img class="productphoto" src="<%= product.photo %>">
        <h2 class="product-name"><%= product.name %></h2>
        <section>
            <p><strong>Type:</strong> <%= product.type %></p>
            <p><strong>Rating:</strong> <%= product.rating %></p>
            <p><strong>Size:</strong> <%= product.size %></p>
            <p><strong>Price: $</strong><%= product.price %></p>
            <p><strong>Quantity:</strong> <%= product.quantity %></p>
            <p><strong>Description:</strong> <%= product.description %></p>

        </section>

        <section class="actions">
            <button class="btn"><a href="/products/<%= product?._id %>/edit">Edit</a></button>
            <form method="POST" action="/products/<%= product?._id %>?_method=DELETE">
                <input class="btn" type="submit" value="Delete" />
            </form>
            <!-- <form method="POST" action="/products/ product?._id %>?_method=PUT">
                <input class="btn" type="submit" value="Add to cart" />
            </form> -->
        </section>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
