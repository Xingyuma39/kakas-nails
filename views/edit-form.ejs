<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: `Edit ${product.name} | Kaka\'s Nails`}) %>
    <link rel="stylesheet" href="/styles/product-form.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <section class="hero">
        <h2>Edit a Listing</h2>
        <h4><i>Edit product details</i></h4>
    </section>

    <form method="POST" action="/products/<%= product._id %>?_method=PUT">
        <!-- Name input -->
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= product.name %>" required>
        <br>
        <!-- Type input -->
        <label for="type">Type:</label>
        <input type="text" id="type" name="type" value="<%= product.type %>">
        <br>
        <!-- Description input -->
        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= product.description %></textarea>
        <br>
        <!-- Rating input -->
        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" min="0" value="<%= product.rating %>">
        <br>
        <!-- Size input -->
        <label for="name">Size:</label>
        <input type="text" id="size" name="size" value="<%= product.size %>">
        <br>
        <!-- Price input -->
        <label for="price">Price:</label>
        <input type="number" step="0.01" id="price" name="price" min="0" value="<%= product.price %>">
        <br>
        <!-- Quantity input -->
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" min="0" value="<%= product.quantity %>">
        <br>
        <!-- Photo input -->
        <label for="photo">Photo (URL):</label>
        <input type="text" id="photo" name="photo" value="<%= product.photo %>" required>
        <br>
    
        <input class="btn" type="submit" value="Edit product">
    </form>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
